<header>
  <h1 id="title">Welcome to Ember.js <a href="https://github.com/broerse/ember-cli-blog" title="GitHub Source"><div class="fa fa-github"></div></a></h1>
  <nav class="navbar navbar-light bg-light navbar-expand">
    <LinkTo @route="application" class="navbar-brand">
      Bloggr
    </LinkTo>
    <ul class="navbar-nav mr-auto">
      <ActiveLink class="nav-item">
        <LinkTo @route="posts" class="nav-link">
          Posts
        </LinkTo>
      </ActiveLink>
      <ActiveLink class="nav-item">
        <LinkTo @route="authors" class="nav-link">
          Authors
        </LinkTo>
      </ActiveLink>
      <ActiveLink class="nav-item">
        <LinkTo @route="about" class="nav-link">
          About
        </LinkTo>
      </ActiveLink>
      <ActiveLink class="nav-item">
        <LinkTo @route="secret" class="nav-link">
          Secret
        </LinkTo>
      </ActiveLink>
    </ul>
    <ul class="navbar-nav ml-auto">
      <li class="nav-item sync {{if cloudState.cloudPull "sync-enabled"}}" title="Pull data">
        <span class="nav-text">
          <i aria-hidden class="fa fa-2x fa-cloud-download sync-cloud"></i>Pull {{if cloudState.cloudPull "synced" "not synced"}}
        </span>
      </li>
      <li class="nav-item sync {{if cloudState.cloudPush "sync-enabled"}}" title="Push data">
        <span class="nav-text">
          <i aria-hidden class="fa fa-2x fa-cloud-upload sync-cloud"></i>Push {{if cloudState.cloudPush "synced" "not synced"}}
        </span>
      </li>
      {{#if session.isAuthenticated}}
        <li class="nav-item">
          <a class="nav-link" href="#" {{action "logout"}}>Logout</a>
        </li>
      {{else}}
        <ActiveLink class="nav-item">
          <LinkTo @route="login" class="nav-link">
            Login
          </LinkTo>
        </ActiveLink>
      {{/if}}
      <li class="nav-item">
        <span class="nav-text">
          <RefreshIndicator @spin={{isSpinning}}/>
        </span>
      </li>
    </ul>
  </nav>
</header>
{{outlet}}
